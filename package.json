{
  "name": "@barelyhuman/wrap",
  "version": "0.0.8-1",
  "description": "Simple library bundler",
  "main": "dist/index.js",
  "source": "source/index.js",
  "bin": {
    "wrap": "dist/index.js"
  },
  "repository": "barelyhuman/wrap",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "fix": "standard --fix",
    "prebuild": "rimraf dist",
    "build": "wrap",
    "prepare": "npm run build; chmod +x dist/index.js; husky install",
    "prepublishOnly": "npm run build"
  },
  "files": [
    "dist/**"
  ],
  "keywords": [
    "bundler",
    "libraries",
    "javascript",
    "rollup",
    "simple"
  ],
  "author": "Reaper <ahoy@barelyhuman.dev>",
  "license": "MIT",
  "wrap": {
    "buble": false,
    "external": [
      "fs",
      "path",
      "child_process"
    ]
  },
  "dependencies": {
    "depdown": "^0.0.3",
    "kleur": "^4.1.4",
    "logcons": "^0.0.4",
    "mri": "^1.1.6"
  },
  "devDependencies": {
    "@babel/core": "^7.14.6",
    "@barelyhuman/wrap": "0.0.6",
    "@rollup/plugin-babel": "^5.3.0",
    "husky": "^6.0.0",
    "lint-staged": "^11.0.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.56.3",
    "rollup-plugin-terser": "^7.0.2",
    "standard": "^16.0.3"
  },
  "standard": {
    "ignore": [
      "dist/*"
    ],
    "globals": [
      ""
    ]
  },
  "lint-staged": {
    "*.js": [
      "standard --fix"
    ]
  }
}
